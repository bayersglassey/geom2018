    if() then: goto: $PREFIX ANIM_NS stand

$PREFIX ANIM_NS step_rot_down_arrive:
    rgraph: $PREFIX RGRAPH_NS "bird_step_rot_down_arrive"
    collmsgs: "crush"
    hitbox:

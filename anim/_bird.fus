        ;;   . - .
        ;;   *\*/*
        ;; . - + - .
        ;;   */*\*
        ;;  (.)  .

    if:
    then: goto: $PREFIX ANIM_NS stand


####################
# WINGS AND FLYING #
####################

$PREFIX ANIM_NS stand_wings:
    rgraph: $PREFIX RGRAPH_NS "bird_stand_wings"

    if:
        key: not isdown u
    then:
        goto: $PREFIX ANIM_NS stand

    if:
        key: wasdown f
    then:
        goto: $PREFIX ANIM_NS fly
        move: 1 0
        delay: $GET_INT FLY_DELAY

    if:
        key: wasdown b
    then:
        goto: $PREFIX ANIM_NS turn_wings
        delay: $GET_INT TURN_DELAY

$PREFIX ANIM_NS turn_wings:
    rgraph: $PREFIX RGRAPH_NS "bird_turn_wings"
    collmsgs: "crush"
    hitbox:
        ;;   .   .
        ;;   *\*/*
        ;; . - + - .
        ;;   */*\*
        ;;   . - .
        ;;   *\*/*
        ;; . - + - .
        ;;   */*\*
        ;;  (.)  .
    if() then:
        move: 1 0
        turn
        goto: $PREFIX ANIM_NS turn_arrive_wings
        delay: 1

$PREFIX ANIM_NS turn_arrive_wings:
    rgraph: $PREFIX RGRAPH_NS "bird_turn_arrive_wings"
    collmsgs: "crush"
    hitbox:
        ;;   .   .
        ;;   *\*/*
        ;; . - + - .
        ;;   */*\*
        ;;   . - .
        ;;   *\*/*
        ;; . - + - .
        ;;   */*\*
        ;;  (.)  .
    if() then: goto: $PREFIX ANIM_NS stand_wings

$PREFIX ANIM_NS fly:
    rgraph: $PREFIX RGRAPH_NS "bird_fly"
    unsafe
    flying
    collmsgs: "crush"
    hitbox:
        ;;   .   .
        ;;   *\*/*
        ;; . - + - .
        ;;   */*\*
        ;;   .   .
        ;;
        ;; .   .   .
        ;;
        ;;  (.)  .
    if() then:
        goto: $PREFIX ANIM_NS flying

$PREFIX ANIM_NS flying:
    rgraph: $PREFIX RGRAPH_NS "bird_flying"
    unsafe
    flying
    collmsgs: "crush"
    hitbox:
        ;;   .   .
        ;;   *\*/*
        ;; . - + - .
        ;;   */*\*
        ;;  (.)- .

    if:
        key: wentdown u
    then:
        rot: 1
        continue

    if:
        key: wentdown d
    then:
        rot: -1
        continue

    if:
        key: not isdown u
        coll: all yes
            ;;   .   .
            ;;
            ;; .   .   .
            ;;
            ;;  (+)  +
        coll: all no
            ;;   . - .
            ;;   *\*/*
            ;; . - + - .
            ;;   */*\*
            ;;  (.)  .
    then:
        goto: $PREFIX ANIM_NS stand_wings

    if:
        key: wasdown f
    then:
        goto: $PREFIX ANIM_NS fly
        move: 1 0
        delay: $GET_INT FLY_DELAY

    if:
        key: wasdown b
    then:
        goto: $PREFIX ANIM_NS turn_flying
        delay: $GET_INT TURN_DELAY

$PREFIX ANIM_NS turn_flying:
    rgraph: $PREFIX RGRAPH_NS "bird_turn_flying"
    unsafe
    flying
    collmsgs: "crush"
    hitbox:
        ;;   .   .
        ;;   *\*/*
        ;; . - + - .
        ;;   */*\*
        ;;   .   .
        ;;
        ;; .   .   .
        ;;
        ;;  (.)  .
    if() then:
        move: 1 0
        turn
        goto: $PREFIX ANIM_NS turn_arrive_flying
        delay: 1

$PREFIX ANIM_NS turn_arrive_flying:

            : "curvy_sq" ( 4  4  0 -4) 0 f
            : "curvy_sq" ( 6  6  2 -4) 0 f

            : "curvy_sq" (-4 -4 -4  0) 0 f
            : "curvy_sq" (-2 -2 -2  0) 0 f
            : "curvy_sq" ( 0  0  0  0) 0 f
            : "curvy_sq" ( 2  2  2  0) 0 f
            : "curvy_sq" ( 4  4  4  0) 0 f


    "curvy_sq_eighth":

        # +---+---+-
        # |   |   | \
        #  \ / \ /   -+
        #   |   |     |
        #   +---+-   /
        #   |   | \ |
        #   |   |  -+
        #   |   | /
        #   0---+-

        prismels:
            : "sq"  (0 0 0 0)  0 f 2
            : "tri" (1 0 0 0)  1 f 3
            : "sq"  (1 0 0 1) 11 f 2
            : "tri" (0 0 1 1)  6 f 4
            : "tri" (0 0 1 1)  8 f 4
            : "tri" (0 0 1 1) 10 f 4

    "curvy_sq_quarter":

        shapes:

        #     |     |   |
        #     +-   / \ /
        #     | \ |   |
        #     |  -+---+
        #     | / |   |
        #     +-   \ /
        #     |     |
        #    / \   -+
        #   |   | /
        #   0---+-

        shapes:
            : "curvy_tri_third" ( 0  0  0  0)  0 f
            : "curvy_tri_third" ( 2  2  2  0)  4 f
